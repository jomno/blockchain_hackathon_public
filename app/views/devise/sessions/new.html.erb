<div class="container devise_form">
  <h2>로그인</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if alert %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% elsif notice %>
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.label :"이메일" %><br />
      <%= f.email_field :email, class: "devise_noborder", autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :"암호" %><br />
      <%= f.password_field :password, class: "devise_noborder", autofocus: true, autocomplete: "off" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field" align="right">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "로그인", class: "btn btn-sm btn-info" %>
    </div>
  <% end %>
  
  <div style="margin-top: 30px" align="center">
    <%= render "devise/shared/info" %>
  </div>
</div>