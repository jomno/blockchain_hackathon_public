<%= link_to like_bulletin_post_path(bulletin, post), style: "text-decoration: none", method: :put, remote: true, id: "post_voteup" do %>
    <div style="font-size: 15px" class="<%= (current_user.voted_up_on? post) ? 'post-vote_selected wow bounce' : 'post-vote_up' %>">
        <div style="padding-top: 20px; color: black">공감</div>
        <div style="padding-top: 25px; color: white; font-weight: bold;"><%= post.get_upvotes.size %></div>
    </div>
<% end %>